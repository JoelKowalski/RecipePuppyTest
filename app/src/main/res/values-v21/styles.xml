<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loading_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="edittext_search_recipe">
        <item name=" android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableLeft">@android:drawable/ic_menu_search</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:textColor">@color/commonBlack</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">@color/defaultBackground</item>
    </style>

    <style name="card_recipe_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/common_border</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>